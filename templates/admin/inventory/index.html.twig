{% extends 'PrestaShopBundle:Admin:layout.html.twig' %}

{% block content %}
<div class="panel">
    <div class="panel-heading">
        <i class="icon-cogs"></i> {{ 'Update Stock from Text Files'|trans({}, 'Modules.Updatestock.Admin') }}
    </div>

    <form action="{{ path('admin_updatestock_inventory') }}" method="post" enctype="multipart/form-data" class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-lg-3">{{ 'Select File(s)'|trans({}, 'Modules.Updatestock.Admin') }}</label>
            <div class="col-lg-6">
                <input type="file" name="stock_files[]" multiple accept=".txt" class="form-control">
                <p class="help-block">{{ 'Format: EAN;;;;; (txt files only)'|trans({}, 'Modules.Updatestock.Admin') }}</p>
            </div>
            <div class="col-lg-3">
                <button type="submit" name="submitStockUpload" class="btn btn-default">
                    <i class="process-icon-save"></i> {{ 'Upload'|trans({}, 'Modules.Updatestock.Admin') }}
                </button>
            </div>
        </div>
    </form>
</div>

{% if reports_generated is defined and reports_generated %}
<div class="panel">
    <div class="panel-heading">
        <i class="icon-file-text"></i> {{ 'Execution Reports'|trans({}, 'Modules.Updatestock.Admin') }}
    </div>
    <div class="alert alert-success">
        {{ 'Inventory processed successfully. Download reports below:'|trans({}, 'Modules.Updatestock.Admin') }}
    </div>
    <ul>
        {% if reports_generated.log %}
            <li><a href="{{ module_dir }}uploads/reports/{{ reports_generated.log }}" target="_blank">{{ 'Inventory Log'|trans({}, 'Modules.Updatestock.Admin') }}</a></li>
        {% endif %}
        {% if reports_generated.zeroed %}
            <li><a href="{{ module_dir }}uploads/reports/{{ reports_generated.zeroed }}" target="_blank">{{ 'Zeroed/Disabled Products'|trans({}, 'Modules.Updatestock.Admin') }}</a></li>
        {% endif %}
        {% if reports_generated.unknown %}
            <li><a href="{{ module_dir }}uploads/reports/{{ reports_generated.unknown }}" target="_blank">{{ 'Unknown EANs'|trans({}, 'Modules.Updatestock.Admin') }}</a></li>
        {% endif %}
        {% if reports_generated.inconsistencies is defined and reports_generated.inconsistencies %}
            <li><a href="{{ module_dir }}uploads/reports/{{ reports_generated.inconsistencies }}" target="_blank" style="color:red; font-weight:bold;">{{ 'Consistency Issues (Fixed)'|trans({}, 'Modules.Updatestock.Admin') }}</a></li>
        {% endif %}
    </ul>
</div>
{% endif %}

<div class="panel">
    <div class="panel-heading">
        <i class="icon-list"></i> {{ 'Uploaded Files & Execution'|trans({}, 'Modules.Updatestock.Admin') }}
    </div>
    <form action="{{ path('admin_updatestock_inventory') }}" method="post" class="form-horizontal">
        <table class="table">
            <thead>
                <tr>
                    <th width="40"><input type="checkbox" name="checkmeable" class="checkmeable"></th>
                    <th>{{ 'Filename'|trans({}, 'Modules.Updatestock.Admin') }}</th>
                    <th>{{ 'Size'|trans({}, 'Modules.Updatestock.Admin') }}</th>
                    <th>{{ 'Date'|trans({}, 'Modules.Updatestock.Admin') }}</th>
                </tr>
            </thead>
            <tbody>
                {% if uploaded_files is not empty %}
                    {% for file in uploaded_files %}
                        <tr>
                            <td><input type="checkbox" name="selected_files[]" value="{{ file.name }}"></td>
                            <td>{{ file.name }}</td>
                            <td>{{ file.size }} bytes</td>
                            <td>{{ file.date }}</td>
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center">{{ 'No files uploaded'|trans({}, 'Modules.Updatestock.Admin') }}</td>
                    </tr>
                {% endif %}
            </tbody>
        </table>

        <div class="panel-footer">
            <button type="submit" name="submitDeleteFiles" class="btn btn-danger">
                <i class="process-icon-delete"></i> {{ 'Delete Selected'|trans({}, 'Modules.Updatestock.Admin') }}
            </button>
        </div>

        <div class="panel-heading" style="margin-top: 20px;">
             <i class="icon-cogs"></i> {{ 'Configuration'|trans({}, 'Modules.Updatestock.Admin') }}
        </div>
        
        <div class="form-group">
            <label class="control-label col-lg-3">{{ 'Inventory Scope'|trans({}, 'Modules.Updatestock.Admin') }}</label>
            <div class="col-lg-9">
                <div class="radio">
                    <label>
                        <input type="radio" name="inventory_scope" value="single" checked>
                        {{ 'Current Shop Only'|trans({}, 'Modules.Updatestock.Admin') }}
                    </label>
                </div>
                <div class="radio">
                    <label>
                        <input type="radio" name="inventory_scope" value="multi">
                        {{ 'All Shops (Multistore)'|trans({}, 'Modules.Updatestock.Admin') }}
                    </label>
                </div>
            </div>
        </div>

        <div class="form-group">
             <label class="control-label col-lg-3">{{ 'Options'|trans({}, 'Modules.Updatestock.Admin') }}</label>
             <div class="col-lg-9">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" name="total_inventory" value="1">
                         {{ 'Total Inventory (Set missing products to 0)'|trans({}, 'Modules.Updatestock.Admin') }}
                    </label>
                    <p class="help-block text-danger">
                         {{ 'Warning: Products not found in the uploaded files will be set to quantity 0.'|trans({}, 'Modules.Updatestock.Admin') }}
                    </p>
                </div>
             </div>
        </div>

        <div class="panel-footer">
            <button type="submit" name="submitRunInventory" class="btn btn-primary pull-right" onclick="return confirm('{{ 'Are you sure you want to update the stock?'|trans({}, 'Modules.Updatestock.Admin') }}');">
                <i class="process-icon-next"></i> {{ 'Execute Inventory'|trans({}, 'Modules.Updatestock.Admin') }}
            </button>
            {% if backup_available %}
                <button type="submit" name="submitRestoreBackup" class="btn btn-warning pull-right" onclick="return confirm('{{ 'This will revert database to previous state. Are you sure?'|trans({}, 'Modules.Updatestock.Admin') }}');" style="margin-right: 10px;">
                    <i class="process-icon-refresh"></i> {{ 'Restore Backup'|trans({}, 'Modules.Updatestock.Admin') }}
                </button>
            {% endif %}
        </div>
    </form>
</div>
{% endblock %}
